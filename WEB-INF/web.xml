<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Vinheria Agnello</display-name>
    <description>Sistema de e-commerce para vinhos da Vinheria Agnello</description>

    <!-- Configuração de Servlets -->
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.vinheria.controller.IndexServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>CatalogoServlet</servlet-name>
        <servlet-class>com.vinheria.controller.CatalogoServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ProdutoServlet</servlet-name>
        <servlet-class>com.vinheria.controller.ProdutoServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>CarrinhoServlet</servlet-name>
        <servlet-class>com.vinheria.controller.CarrinhoServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ClienteServlet</servlet-name>
        <servlet-class>com.vinheria.controller.ClienteServlet</servlet-class>
    </servlet>

    <!-- Mapeamento de URLs -->
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>CatalogoServlet</servlet-name>
        <url-pattern>/catalogo</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ProdutoServlet</servlet-name>
        <url-pattern>/produto</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>CarrinhoServlet</servlet-name>
        <url-pattern>/carrinho</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ClienteServlet</servlet-name>
        <url-pattern>/cliente</url-pattern>
    </servlet-mapping>

    <!-- Página inicial -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index</welcome-file>
    </welcome-file-list>

    <!-- Configuração de sessão -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Configuração de encoding -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.vinheria.util.CharacterEncodingFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Configuração de erro -->
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>

</web-app>

